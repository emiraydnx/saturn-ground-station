<Page
    x:Class="copilot_deneme.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:copilot_deneme"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    UseLayoutRounding="True">

    <Page.Resources>
        <Style x:Key="DataCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="Shadow">
                <Setter.Value>
                    <ThemeShadow/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A2E" Offset="0"/>
                <GradientStop Color="#16213E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Style="{StaticResource DataCardStyle}"
                Margin="16,16,16,8"
                Translation="0,0,8">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="16,12">
                <FontIcon Glyph="&#xE8C8;" 
                          Foreground="{StaticResource SuccessBrush}" 
                          FontSize="20" 
                          Margin="0,0,12,0"/>
                <TextBlock Text="Ana Sayfa - Ham Veri Görüntüleme"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="White"/>
                <Ellipse Width="10" Height="10" 
                         Fill="{StaticResource SuccessBrush}" 
                         Margin="12,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Ana İçerik - Ham Veri Görüntüleme -->
        <Border Grid.Row="1"
                Style="{StaticResource DataCardStyle}"
                Margin="16,8,16,16"
                Translation="0,0,8">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <FontIcon Glyph="&#xE8F1;" 
                              Foreground="{StaticResource AccentBrush}" 
                              FontSize="18" 
                              Margin="0,0,8,0"/>
                    <TextBlock Text="Ham Seri Port Verileri"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </StackPanel>

                <ListView x:Name="LogListView"
                          Grid.Row="1"
                          ItemsSource="{Binding LogEntries}"
                          SelectionMode="None"
                          IsItemClickEnabled="False">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Padding" Value="5,2"/>
                            <Setter Property="MinHeight" Value="10"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       FontFamily="Consolas" 
                                       FontSize="12" 
                                       TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Button Grid.Row="2" 
                        Content="Temizle" 
                        HorizontalAlignment="Right" 
                        Margin="0,12,0,0"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        CornerRadius="6"
                        Click="ClearData_Click"/>

                <!-- Status -->
                <Border Grid.Row="3"
                        Background="{StaticResource DarkBrush}" 
                        CornerRadius="6" 
                        Padding="12,8" 
                        Margin="0,12,0,0">
                    <StackPanel>
                        <TextBlock x:Name="StatusTextBlock"
                                   Text="Ham veri bekleniyor..."
                                   FontSize="12"
                                   Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Center"/>
                       
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
