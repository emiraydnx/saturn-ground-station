<Page
    x:Class="copilot_deneme.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:copilot_deneme"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Port bilgisi -->
        <TextBlock
            Grid.Row="0" Grid.ColumnSpan="2"
           
            FontSize="18"
            FontWeight="Bold"
            Margin="10"
            HorizontalAlignment="Center"/>

        <!-- Sol taraf - Serial Veri Görüntüleme Alaný -->
        <Border 
            Grid.Row="1" Grid.Column="0"
            Margin="10"
            BorderThickness="1"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock 
                    Grid.Row="0"
                    Text="Seri Port Verileri"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Margin="10,5"
                    HorizontalAlignment="Center"/>
                
                <ScrollViewer x:Name="SerialDataScrollViewer" 
                             Grid.Row="1"
                             Margin="10"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="SerialDataTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             Background="Black"
                             Foreground="Green"
                             FontFamily="Consolas"
                             FontSize="12"
                             MinHeight="200"/>
                </ScrollViewer>
                
               
            </Grid>
        </Border>

        <!-- Sað taraf - Telemetri Verileri -->
        <Border 
            Grid.Row="1" Grid.Column="1"
            Margin="10"
            BorderThickness="1"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
            CornerRadius="8">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Background="Black" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Ýrtifa: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="irtifaData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Roket GPS Ýrtifa: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="roketGpsIrtifaData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Roket GPS Enlem: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="roketEnlemData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Roket GPS Boylam: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="roketBoylamData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Görev Yükü GPS Ýrtifa: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="gorevYukuGpsIrtifaData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Görev Yükü GPS Enlem: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="gorevYukuGpsEnlemData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Text="Görev Yükü GPS Boylam: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="6" Grid.Column="1" x:Name="gorevYukuGpsBoylamData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="7" Grid.Column="0" Text="Jiroskop X: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="7" Grid.Column="1" x:Name="jiroskopXData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="8" Grid.Column="0" Text="Jiroskop Y: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="8" Grid.Column="1" x:Name="jiroskopYData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="9" Grid.Column="0" Text="Jiroskop Z: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="9" Grid.Column="1" x:Name="jiroskopZData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="10" Grid.Column="0" Text="Ývme X: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="10" Grid.Column="1" x:Name="ivmeXData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="11" Grid.Column="0" Text="Ývme Y: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="11" Grid.Column="1" x:Name="ivmeYData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="12" Grid.Column="0" Text="Ývme Z: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="12" Grid.Column="1" x:Name="ivmeZData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="13" Grid.Column="0" Text="Açý: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="13" Grid.Column="1" x:Name="aciData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock Grid.Row="14" Grid.Column="0" Text="Durum: " FontSize="15" Margin="0,0,10,10" Foreground="White"/>
                    <TextBlock Grid.Row="14" Grid.Column="1" x:Name="durumData" Text="0.00" FontSize="15" Margin="0,0,0,10" Foreground="Lime"/>

                    <TextBlock x:Name="StatusTextBlock"
                              Grid.Row="15" Grid.ColumnSpan="2"
                              Text="Port kontrol ediliyor..."
                              Style="{ThemeResource SubtitleTextBlockStyle}"
                              HorizontalAlignment="Center"
                              Foreground="Yellow"
                              Margin="0,10,0,0"/>
                </Grid>
            </ScrollViewer>
        </Border>

        <!-- Chart Alaný -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <!-- LDR Chart -->
            <Border 
                Margin="10"
                BorderThickness="1"
                BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                CornerRadius="8"
                Width="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock 
                        Text="LDR"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="5"
                        HorizontalAlignment="Center"/>
                    
                    
                </Grid>
            </Border>

            <!-- Distance Chart -->
            <Border 
                Margin="10"
                BorderThickness="1"
                BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                CornerRadius="8"
                Width="300">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock 
                        Text="Distance"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Margin="5"
                        HorizontalAlignment="Center"/>
                    
                    
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>
