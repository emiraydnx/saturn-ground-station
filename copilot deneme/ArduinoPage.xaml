<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="copilot_deneme.ArduinoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:copilot_deneme"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Gradient arka plan -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1A2E" Offset="0"/>
                <GradientStop Color="#16213E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer ZoomMode="Disabled" HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="Arduino Sensör Verileri" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#FFD93D" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="BNO055 (IMU) ve BMP388 (Barometric) Sensör Takibi" 
                               FontSize="16" 
                               Foreground="#C7CEEA" 
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Connection Status Panel -->
                <Border Grid.Row="1" 
                        Background="#0F0F23" 
                        BorderBrush="#FFD93D" 
                        BorderThickness="2" 
                        CornerRadius="10" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Connection Info -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="ConnectionIndicator" 
                                     Width="12" 
                                     Height="12" 
                                     Fill="Red" 
                                     Margin="0,0,10,0"/>
                            <TextBlock x:Name="ConnectionStatusText" 
                                       Text="Arduino Baðlantýsý Bekleniyor..." 
                                       Foreground="White" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Last Update Time -->
                        <TextBlock Grid.Column="1" 
                                   x:Name="LastUpdateText" 
                                   Text="Son Güncelleme: --:--:--" 
                                   Foreground="#C7CEEA" 
                                   Margin="20,0"
                                   VerticalAlignment="Center"/>

                        <!-- Data Counter -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Veri Sayýsý: " 
                                       Foreground="#C7CEEA" 
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="DataCountText" 
                                       Text="0" 
                                       Foreground="#FFD93D" 
                                       FontWeight="Bold" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Charts Grid -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Yaw Chart -->
                    <Border Grid.Row="0" Grid.Column="0" 
                            Background="#0F0F23" 
                            BorderBrush="#FFD93D" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Yaw (Sapma Açýsý)" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#FFD93D" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="YawChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="Mevcut: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentYawText" Text="0.0°" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Pitch Chart -->
                    <Border Grid.Row="0" Grid.Column="1" 
                            Background="#0F0F23" 
                            BorderBrush="#06FFA5" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Pitch (Eðim Açýsý)" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#06FFA5" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="PitchChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="Mevcut: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentPitchText" Text="0.0°" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Roll Chart -->
                    <Border Grid.Row="1" Grid.Column="0" 
                            Background="#0F0F23" 
                            BorderBrush="#FF6B6B" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Roll (Yuvarlanma Açýsý)" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#FF6B6B" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="RollChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="Mevcut: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentRollText" Text="0.0°" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Total Acceleration Chart -->
                    <Border Grid.Row="1" Grid.Column="1" 
                            Background="#0F0F23" 
                            BorderBrush="#FF9500" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Toplam Ývme" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#FF9500" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="AccelChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="Mevcut: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentAccelText" Text="0.0 m/s²" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Pressure Chart -->
                    <Border Grid.Row="2" Grid.Column="0" 
                            Background="#0F0F23" 
                            BorderBrush="#9B59B6" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Basýnç (hPa)" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#9B59B6" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="PressureChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="Mevcut: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentPressureText" Text="0.0 hPa" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Altitude Chart -->
                    <Border Grid.Row="2" Grid.Column="1" 
                            Background="#0F0F23" 
                            BorderBrush="#3498DB" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Ýrtifa (m)" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#3498DB" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="AltitudeChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="Mevcut: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentAltitudeText" Text="0.0 m" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Temperature Chart -->
                    <Border Grid.Row="3" Grid.Column="0" 
                            Background="#0F0F23" 
                            BorderBrush="#E74C3C" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Sýcaklýk (°C)" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#E74C3C" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="TemperatureChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="Mevcut: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentTemperatureText" Text="0.0°C" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Pressure Rate Chart -->
                    <Border Grid.Row="3" Grid.Column="1" 
                            Background="#0F0F23" 
                            BorderBrush="#F39C12" 
                            BorderThickness="2" 
                            CornerRadius="10" 
                            Margin="5"
                            Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Basýnç Deðiþim Hýzý (hPa/s)" 
                                       FontSize="14" 
                                       FontWeight="Bold" 
                                       Foreground="#F39C12" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,5"/>
                            
                            <lvc:CartesianChart Grid.Row="1" 
                                                x:Name="PressureRateChart" 
                                                Background="Transparent"
                                                Height="120"/>
                            
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,3,0,0">
                                <TextBlock Text="dP/dt: " Foreground="#C7CEEA" FontSize="11"/>
                                <TextBlock x:Name="CurrentPressureRateText" Text="0.0 hPa/s" Foreground="White" FontWeight="Bold" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>